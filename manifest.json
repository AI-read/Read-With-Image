{
  "manifest_version": 3,
  "name": "ChatGPT Text Selector",
  "version": "1.0",
  "description": "Select text on specific websites and send it to ChatGPT.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://weread.qq.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://lexica.art/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
